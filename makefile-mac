D?=0
MAXDIM?=128

ifeq ($(D),1)
FLAGS=-O0 -g -fsanitize=address -fno-omit-frame-pointer -std=c++20 -DMAX_DIM=$(MAXDIM)
else
FLAGS=-O3 -std=c++20 -DMAX_DIM=$(MAXDIM)
endif

COMPILER=mpic++
INCLUDES=-I./include

all: rgraph

rgraph: rgraph.cpp src/point_vector.cpp src/dist_point_vector.cpp src/global_point.cpp src/cover_tree.cpp src/dist_voronoi.cpp src/dist_query.cpp src/ghost_tree.cpp src/work_stealer.cpp src/utils.cpp src/radius_neighbors_graph.cpp
	$(COMPILER) -o $@ $(INCLUDES) $(FLAGS) $^

.PHONY: clean

clean:
	rm -rf *.dSYM *.so rgraph
