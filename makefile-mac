D?=0
MAXDIM?=128

ifeq ($(D),1)
FLAGS=-O0 -g -fsanitize=address -fno-omit-frame-pointer -std=c++20 -DMAX_DIM=$(MAXDIM)
else
FLAGS=-O3 -std=c++20 -DMAX_DIM=$(MAXDIM)
endif

COMPILER=mpic++
INCLUDES=-I./include

all: main build_diagram

main: main.cpp src/point_vector.cpp src/global_point.cpp src/cover_tree.cpp src/dist_voronoi.cpp
	$(COMPILER) -o $@ $(INCLUDES) $(FLAGS) $^

build_diagram: build_diagram.cpp src/point_vector.cpp src/global_point.cpp src/cover_tree.cpp src/dist_voronoi.cpp
	$(COMPILER) -o $@ $(INCLUDES) $(FLAGS) $^

clean:
	rm -rf *.dSYM *.so main build_diagram
